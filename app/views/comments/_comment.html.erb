<% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %><br>
    <small><%= comment.created_at %></small>
  </p>

  <p>
    <%= link_to 'Destroy Comment', [comment.article, comment],
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </p>
  <hr>
<% end %>